{
  "name": "react-boilerplate",
  "version": "3.0.0",
  "description": "A highly scalable, offline-first foundation with the best DX and a focus on performance and best practices",
  "repository": {
    "type": "git",
    "url": "git://github.com/mxstbr/react-boilerplate.git"
  },
  "engines": {
    "npm": ">=3"
  },
  "author": "Max Stoiber",
  "license": "MIT",
  "scripts": {
    "npmcheckversion": "node ./internals/scripts/npmcheckversion.js",
    "preinstall": "npm run npmcheckversion",
    "prebuild": "npm run test && npm run build:clean",
    "build:clean": "rimraf ./build/*",
    "build": "cross-env NODE_ENV=production webpack --config internals/webpack/webpack.prod.babel.js --color -p",
    "analyze": "node ./internals/scripts/analyze.js",
    "start": "npm run start:tunnel",
    "fixture": "node --harmony ./bin/fixture.js",
    "start:tunnel": "cross-env NODE_ENV=development node server",
    "start:prod": "cross-env NODE_ENV=production node server",
    "start-dev-api": "better-npm-run start-dev-api",
    "pagespeed": "node ./internals/scripts/pagespeed.js",
    "presetup": "npm i chalk",
    "setup": "node ./internals/scripts/setup.js",
    "clean": "shjs ./internals/scripts/clean.js",
    "generate": "plop --plopfile internals/generators/index.js",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint . --ignore-path .gitignore --ignore-pattern internals/scripts",
    "lint:js:staged": "eslint-staged",
    "lint:css": "stylelint ./app/**/*.css",
    "lint:css:staged": "stylelint-staged",
    "lint:staged": "npm run lint:js:staged && npm run lint:css:staged",
    "pretest": "npm run lint",
    "test": "cross-env NODE_ENV=test karma start internals/testing/karma.conf.js --single-run",
    "test:watch": "npm run test -- --auto-watch --no-single-run",
    "test:firefox": "npm run test -- --browsers Firefox",
    "test:safari": "npm run test -- --browsers Safari",
    "test:ie": "npm run test -- --browsers IE",
    "coveralls": "cat ./coverage/lcov/lcov.info | coveralls"
  },
  "betterScripts": {
    "start-dev-api": {
      "command": "node --harmony ./bin/api.js",
      "env": {
        "NODE_PATH": "./api",
        "NODE_ENV": "development",
        "APIPORT": 3030
      }
    }
  },
  "pre-commit": "lint:staged",
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
      "browser": true,
      "node": true,
      "mocha": true
    },
    "rules": {
      "max-len": 0
    },
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": "./internals/webpack/webpack.test.babel.js"
        }
      }
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "color-hex-case": "upper",
      "string-quotes": "single",
      "font-family-name-quotes": "always-where-recommended",
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ],
      "indentation": 2
    }
  },
  "dependencies": {
    "axios": "^0.12.0",
    "babel-polyfill": "^6.7.4",
    "better-npm-run": "0.0.8",
    "body-parser": "^1.15.1",
    "chalk": "^1.1.3",
    "compression": "^1.6.1",
    "core-decorators": "^0.12.2",
    "express": "^4.13.4",
    "express-decorators": "^0.5.0",
    "express-promise": "^0.4.0",
    "express-session": "^1.13.0",
    "express-validator": "^2.20.5",
    "file-loader": "^0.8.5",
    "flexboxgrid": "^6.3.0",
    "fontfaceobserver": "^1.7.1",
    "history": "^2.1.0",
    "http-proxy": "^1.13.3",
    "immutable": "^3.8.1",
    "knex": "^0.11.5",
    "lodash.endswith": "^4.1.0",
    "lodash.forown": "^4.2.0",
    "lodash.get": "^4.3.0",
    "lodash.isequal": "^4.2.0",
    "lodash.isstring": "^4.0.1",
    "material-ui": "^0.15.1",
    "objection": "^0.5.1",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "pg": "^5.0.0",
    "piping": "^1.0.0-rc.2",
    "react": "^15.0.1",
    "react-breadcrumbs": "^1.3.15",
    "react-datagrid": "^3.0.25-beta",
    "react-dom": "^15.0.1",
    "react-fa": "^4.1.2",
    "react-pure-render": "^1.0.2",
    "react-redux": "^4.4.5",
    "react-redux-form": "^0.13.11",
    "react-router": "^2.3.0",
    "react-router-redux": "^4.0.4",
    "react-router-scroll": "^0.2.0",
    "react-tap-event-plugin": "^1.0.0",
    "recompose": "^0.19.0",
    "redux": "^3.5.2",
    "redux-immutable": "^3.0.6",
    "redux-saga": "^0.10.0",
    "redux-thunk": "^2.1.0",
    "reselect": "^2.5.1",
    "sanitize.css": "^3.3.0",
    "socket.io": "^1.4.6",
    "tv4": "^1.2.7",
    "validator": "^5.4.0",
    "whatwg-fetch": "^1.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.7.7",
    "babel-eslint": "^6.0.4",
    "babel-loader": "^6.2.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-es2015-destructuring": "^6.9.0",
    "babel-plugin-transform-es2015-parameters": "^6.9.0",
    "babel-plugin-transform-react-constant-elements": "^6.8.0",
    "babel-plugin-transform-react-display-name": "^6.8.0",
    "babel-plugin-transform-react-inline-elements": "^6.8.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.2.7",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-es2015-node6": "^0.2.0",
    "babel-preset-es2015-webpack": "^6.4.1",
    "babel-preset-react": "^6.5.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.5.0",
    "chai": "^3.5.0",
    "chai-enzyme": "^0.4.2",
    "cheerio": "^0.20.0",
    "coveralls": "^2.11.9",
    "cross-env": "^1.0.7",
    "css-loader": "^0.23.1",
    "enzyme": "^2.2.0",
    "eslint": "^2.10.1",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-import-resolver-webpack": "^0.2.4",
    "eslint-plugin-import": "^1.8.0",
    "eslint-plugin-jsx-a11y": "^1.2.0",
    "eslint-plugin-react": "^5.1.1",
    "eventsource-polyfill": "^0.9.6",
    "expect": "^1.18.0",
    "expect-jsx": "^2.5.1",
    "exports-loader": "^0.6.3",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "html-loader": "^0.4.3",
    "html-webpack-plugin": "^2.16.0",
    "imports-loader": "^0.6.5",
    "ip": "^1.1.2",
    "isparta": "^4.0.0",
    "isparta-loader": "^2.0.0",
    "json-loader": "^0.5.4",
    "jsx-control-statements": "^3.1.2",
    "karma": "^0.13.22",
    "karma-chrome-launcher": "^1.0.1",
    "karma-coverage": "^1.0.0",
    "karma-firefox-launcher": "^1.0.0",
    "karma-ie-launcher": "^1.0.0",
    "karma-mocha": "^1.0.1",
    "karma-mocha-reporter": "^2.0.3",
    "karma-safari-launcher": "^1.0.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.7.0",
    "lint-staged": "^0.2.1",
    "mocha": "^2.4.5",
    "ngrok": "2.1.8",
    "node-sass": "^3.8.0",
    "null-loader": "^0.1.1",
    "offline-plugin": "^3.2.0",
    "plop": "^1.5.0",
    "postcss-cssnext": "^2.5.2",
    "postcss-focus": "^1.0.0",
    "postcss-loader": "^0.9.1",
    "postcss-reporter": "^1.3.3",
    "psi": "^2.0.3",
    "resolve-url-loader": "^1.4.4",
    "rimraf": "^2.5.2",
    "sass-loader": "^3.2.2",
    "shelljs": "^0.7.0",
    "sinon": "^2.0.0-pre",
    "sql-fixtures": "^1.0.0",
    "style-loader": "^0.13.1",
    "stylelint": "^6.3.3",
    "stylelint-config-standard": "^8.0.0",
    "url-loader": "^0.5.7",
    "webpack": "2.1.0-beta.8",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-hot-middleware": "^2.10.0"
  }
}
